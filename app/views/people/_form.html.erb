<%= form_with model: @person, local: true do |form| %>

  <p>
    <%= 'Name: ' %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= 'Birthday: ' %>
    <%#= form.text_field :bithday %>
    <%#= form.text_field :birthday, value: @person.birthday_form %>
    <%= date_select :person, :birthday %>
  </p>

  <p>
    <%= 'Email: ' %>
    <%= form.text_field :email %>
  </p>

  <br>
  <p> <%= form.submit %> </p>
<% end %>
