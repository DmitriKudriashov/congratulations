<div>
  <h1> People </h1>
  <div class="digg_pagination">
     <%= will_paginate @people, :container => false %>
  </div>
  <%= link_to 'New Person', new_person_path %>
  <% if @people.present? %>
    <table class="tab-sorted table table-bordered" style="font-size: 12px">
      <thead class="thead-light" align="center">
        <tr>
          <th name="column1" class="sort-by-title pointer col-md-auto">
            <%= 'Name and Company' %>
            <%= octicon 'arrow-up', class: 'text-success' %>
            <%= octicon 'arrow-down' , class: 'text-success hide' %>
          </th>
          <th> Birthday </th>
          <th> Email </th>
          <th> N rec </th>
        </tr>
      </thead>
      <%= render @people %>
    </table>
  <% else %>
    <p>
      <%= 'Empty list' %>
    </p>
  <% end %>
  <div class="digg_pagination">
     <%= will_paginate @people, :container => false %>
  </div>
</div>

