      <% if @countries.present? %>
        <table class="table table-bordered">
          <thead class="thead-light" align="center">
            <tr>
              <th> N record</th>
              <th> Country </th>
              <th> Code </th>
            </tr>
          </thead>
          <%= render @countries %>
