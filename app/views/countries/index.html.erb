<div>
  <h1> Countries </h1>
<div class="digg_pagination">
  <%= will_paginate @countries, :container => false %>
</div>

  <p> <%= link_to 'New Country', new_country_path %> </p>

    <% if @countries.present? %>
      <table class="table table-bordered">
        <thead class="thead-light" align="center">
          <tr>
            <th> N record</th>
            <th> Country </th>
            <th> Code </th>
          </tr>
        </thead>
        <%= render @countries %>
      </table>
    <% else %>
      <p>
        <%= 'Empty list' %>
      </p>
    <% end %>
  <br>
</div>

