<table class="container">
   <h1> Emails </h1>
   <p>
     <%= link_to 'New Email', new_email_path %>
   </p>

   <% if @emails.present? %>
     <table class="table table-bordered">
       <thead class="thead-light" align="center">
        <tr>
          <th > N </th>
          <th > Name </th>
          <th > Personal and Company Mail </th>
          <th > Holiday </th>
          <th > Message </th>
          <th > Will be Send </th>
          <th > Sent  </th>
        </tr>
       </thead>
          <%= render @emails %>
     </table>
   <% else %>
     <p>
       <%= 'Empty list' %>
     </p>
  <% end %>
  </table>

