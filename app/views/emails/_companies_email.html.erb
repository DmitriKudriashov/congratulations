<% if @companies_emails.present? %>
  <div>
    Companies recipients !
  </div>

  <table id="dtBasicExample" class="table table-striped table-bordered table-sm">
    <thead class="thead-light" align="center">
      <tr>
        <th>Company</th>
        <th>Email</th>
        <th>Comment</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @companies_emails.each do |companies_email| %>
      <tr>
        <td>
          <%= companies_email.company.name %>
          <a style="color: blue;" >
           ( <%= companies_email.company.country.name %> )
          </a>

          (<%= companies_email.id %>)
        </td>
        <td>
          <%= companies_email.company.email %>
        </td>
        <td>
          <%= companies_email.comment %>
        </td>
        <td>
          <%= link_to 'edit', edit_companies_email_path(companies_email.id) %>
        </td>
        <td>
          <%= link_to 'delete', companies_email_path(companies_email.id),
                      method: :delete, data: { confirm: 'Are you sure' } %>
        </td>

      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>
    <%#= 'Empty recipients list' %>
  </p>
<% end %>
