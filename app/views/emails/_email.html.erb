    <% if  email.checkit > 0 %>
  <td class="s_e_d">
    <%= link_to 'SEND', "/emails/send/#{email.id}" %>
  </td>
    <% else %>
  <td class="checkit">
    <%= link_to 'CHECK IT !', edit_email_path(email.id), :style=> 'color: red;' %>
  </td>
    <% end %>
  <td class="s_e_d">
    <%= link_to 'edit', edit_email_path(email.id) %>
  </td>
  <td class="s_e_d">
    <%= link_to 'delete', email_path(email),
                method: :delete, data: { confirm: 'Are you sure' } %>
  </td>
</tr>

