  </td>
  <td >
    <%= email.name %>
  </td>
  <td >
    <%#= "#{email.person.email} / #{email.mail_address.email}" %>
    <%= text_area_tag(:text, "#{email.person.email}; \n #{email.mail_address.email}", size: :auto)  %>
  </td>
  <td>
    <%= email.holiday.name if email.holiday_id.present? %>
  </td>
  <td>
    <%= text_area_tag(:text, email.message, size: :auto) if email.message.present? %>
  </td>

