<%= form_with model: @countries_holiday, local: true do |form| %>
  <p>
    <%= 'Company: ' %>
    <%= form.collection_select :country_id, Country.all, :id, :name, prompt: 'Select company' %>
  </p>
  <p>
    <%= 'Holiday: ' %>
    <%= form.collection_select :holiday_id, Holiday.all, :id, :name, prompt: 'Select holiday' %>
  </p>
  <br>
  <p> <%= form.submit %> </p>
<% end %>
<br>
