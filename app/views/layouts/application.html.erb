    <style media="screen">
      .content {
        height: 200px;
      }
    </style>
  </head>

  <body>
    <div>
      <% if user_signed_in? %>
        <%= "Hello!   #{current_user.name}  (#{current_user.email}) " %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure' } %><br>
        <%= render 'navbar/nav' %>
        <%= render 'layouts/view_day_month' %>

      <% else %>
        <p>
          <%= link_to 'Login' , new_user_session_path %>
          <!-- | -->
          <%#= link_to 'Sign Up' , new_user_registration_path %>
        </p>
      <% end %>
    </div>

    <div class="container">
      <%= render 'shared/flash' %>
      <%= yield %>
    </div>
